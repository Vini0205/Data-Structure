import java.util.Scanner;

class Student {
    String name;
    int grade;

    Student(String name, int grade) {
        this.name = name;
        this.grade = grade;
    }

    public String toString() {
        return name + " (" + grade + ")";
    }
}

public class Sorting {
    // Array-Based Sorting
    static void bubbleSort(int[] arr) {
        System.out.println("Before Bubble Sort: ");
        printArray(arr);
        for (int i = 0; i < arr.length - 1; i++) {
            for (int j = 0; j < arr.length - 1 - i; j++) {
                if (arr[j] > arr[j + 1]) {
                    int temp = arr[j];
                    arr[j] = arr[j + 1];
                    arr[j + 1] = temp;
                }
            }
        }
        System.out.println("After Bubble Sort: ");
        printArray(arr);
    }

    static void selectionSort(int[] arr) {
        System.out.println("Before Selection Sort: ");
        printArray(arr);
        for (int i = 0; i < arr.length - 1; i++) {
            int minIndex = i;
            for (int j = i + 1; j < arr.length; j++) {
                if (arr[j] < arr[minIndex]) {
                    minIndex = j;
                }
            }
            int temp = arr[i];
            arr[i] = arr[minIndex];
            arr[minIndex] = temp;
        }
        System.out.println("After Selection Sort: ");
        printArray(arr);
    }

    static void insertionSort(int[] arr) {
        System.out.println("Before Insertion Sort: ");
        printArray(arr);
        for (int i = 1; i < arr.length; i++) {
            int key = arr[i];
            int j = i - 1;
            while (j >= 0 && arr[j] > key) {
                arr[j + 1] = arr[j];
                j--;
            }
            arr[j + 1] = key;
        }
        System.out.println("After Insertion Sort: ");
        printArray(arr);
    }

    static void printArray(int[] arr) {
        for (int num : arr) System.out.print(num + " ");
        System.out.println();
    }

    // Object-Based Sorting (Bubble Sort for simplicity)
    static void bubbleSortStudentsByGrade(Student[] students) {
        System.out.println("Before Sorting Students by Grade: ");
        printStudents(students);
        for (int i = 0; i < students.length - 1; i++) {
            for (int j = 0; j < students.length - 1 - i; j++) {
                if (students[j].grade > students[j + 1].grade) {
                    Student temp = students[j];
                    students[j] = students[j + 1];
                    students[j + 1] = temp;
                }
            }
        }
        System.out.println("After Sorting Students by Grade: ");
        printStudents(students);
    }

    static void bubbleSortStudentsByName(Student[] students) {
        System.out.println("Before Sorting Students by Name: ");
        printStudents(students);
        for (int i = 0; i < students.length - 1; i++) {
            for (int j = 0; j < students.length - 1 - i; j++) {
                if (students[j].name.compareTo(students[j + 1].name) > 0) {
                    Student temp = students[j];
                    students[j] = students[j + 1];
                    students[j + 1] = temp;
                }
            }
        }
        System.out.println("After Sorting Students by Name: ");
        printStudents(students);
    }

    static void printStudents(Student[] students) {
        for (Student s : students) System.out.println(s);
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int[] numbers = {7, 3, 9, 2, 5};
        Student[] students = {
            new Student("Vine", 85),
            new Student("James", 92),
            new Student("Lex", 78),
            new Student("Roj", 90)
        };

        System.out.println("=== Sorting Lab ===\n");
        bubbleSort(numbers.clone());
        selectionSort(numbers.clone());
        insertionSort(numbers.clone());

        bubbleSortStudentsByGrade(students.clone());
        bubbleSortStudentsByName(students.clone());
    }
}
